{
    "key": "logspout",
    "label": "LogSpout",
    "image": {
		"name" : "ndslabs/logspout",
		"tags" : ["latest"]
	},
    "access":"internal",
    "depends": [
        {
            "key": "logstash",
            "required": true
        }
    ],
    "config":  [
        {
            "name": "LABEL",
            "value": "io.kubernetes.pod.namespace:^$(NAMESPACE)$"
        },
        {
            "name": "DEBUG",
            "value": "true"
        }
    ],
    "command": [ "bin/logspout" ],
    "args": [ "syslog+tcp://$(LOGSTASH_PORT_5000_TCP_ADDR):$(LOGSTASH_PORT_5000_TCP_PORT)" ],
    "volumeMounts":[
        { "mountPath": "/tmp/docker.sock", "name": "docker" }
    ],
    "resourceLimits": {
        "cpuMax": "1",
        "cpuDefault": "100m",
        "memMax": "250Mi",
        "memDefault": "100Mi"
    }
}
