{
    "label": "Clowder-Init",
    "key": "clowderinit",
    "description": "Initialize Clowder with Admin Account.",
    "image": {
	"name": "ndslabs/bdcreate-useraccount",
	"tags" : ["latest"]
    },
    "display": "standalone",
    "access": "external",
    "logo": "https://browndog.ncsa.illinois.edu/images/bd3a_3d.png?crc=4243147919",
    "depends": [    ],
    "config":  [
        {
            "name": "CLOWDER_PORT_9000_TCP_ADDR",
            "value": "$(NDSLABS_STACK)-clowderbd",
            "canOverride": false
        },
        {
            "name": "MONGO_PORT_27017_TCP_ADDR",
            "value": "$(NDSLABS_STACK)-mongo",
            "canOverride": false
        },
        {
            "name": "RABBITMQ_PORT_15672_TCP_ADDR",
            "value": "$(NDSLABS_STACK)-rabbitmq",
            "canOverride": false
        },
        {
            "name": "CLOWDER_SERVER",
            "value": "http://$(NDSLABS_STACK)-clowderbd",
            "canOverride": false
        },
        {
            "name": "MONGO_URI",
            "value": "mongodb://$(NDSLABS_STACK)-mongo:27017/clowder",
            "canOverride": false
        },
        {
            "name": "ADMIN",
            "value": "true",
            "canOverride": false
        },
        {
            "name": "EMAIL_ADDRESS",
            "value": "admin@test.com",
            "canOverride": true
        },
        {
            "name": "PASSWORD",
            "value": "testing0909",
            "canOverride": true
        },
        {
          "name":"SLEEP_WHEN_DONE",
          "value": "true",
          "canOverride": false
        }
    ],
    "resourceLimits": {
        "cpuMax": 200,
        "cpuDefault": 100,
        "memMax": 1000,
        "memDefault": 250
    },
    "repositories": [
      {
        "url": "https://opensource.ncsa.illinois.edu/bitbucket/scm/cats/clowder.git",
        "type": "git"
      }
    ],
    "info": "https://nationaldataservice.atlassian.net/wiki/display/NDSC/Clowder",
    "tags" : ["2", "22", "36"]
}
